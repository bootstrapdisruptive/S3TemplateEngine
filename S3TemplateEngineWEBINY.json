    "Outputs": {},
    "Resources": {
        "LHOKUPDATESITEMAP": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Architectures": [
                    "arm64"
                ],
                "Code": {
                    "S3Bucket": {
                        "Ref": "S3LambdaBucket"
                    },
                    "S3Key": "HOK_update_sitemap.zip"
                },
                "Handler": "index.handler",
                "FunctionName": {
                    "Fn::Join": [
                        "_",
                        [
                            {
                                "Ref": "Environment"
                            },
                            "HOK_update_sitemap"
                        ]
                    ]
                },
                "ReservedConcurrentExecutions": 1,
                "Description": "Receives a S3 stream and processes updates into sitemap.xml updates.",
                "MemorySize": 2048,
                "Role": {
                    "Fn::Join": [
                        "",
                        [
                            "arn:aws:iam::",
                            {
                                "Ref": "AWS::AccountId"
                            },
                            ":role/",
                            {
                                "Ref": "Environment"
                            },
                            "_lambda_dynamoDB_S3"
                        ]
                    ]
                },
                "Runtime": "nodejs16.x",
                "Tags": [
                    {
                        "Key": "env",
                        "Value": {
                            "Ref": "Environment"
                        }
                    },
                    {
                        "Key": "app",
                        "Value": {
                            "Ref": "WebsiteName"
                        }
                    }
                ],
                "Timeout": 240
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "b755bf9c-e2d7-4837-893a-1435855aa0e3"
                }
            }
        },
        "LHOKCOPYPUBLISHED": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "Architectures": [
                    "arm64"
                ],
                "Code": {
                    "S3Bucket": {
                        "Ref": "S3LambdaBucket"
                    },
                    "S3Key": "HOK_transfer_published_item.zip"
                },
                "Handler": "index.handler",
                "Environment": {
                    "Variables": {
                        "destination_table": {
                            "Ref": "DDBWebsiteContentFromWebiny"
                        },
                        "relevant_webiny_models": {
                            "Ref": "WebinyModels"
                        },
                        "destination_table_staticContent": {
                            "Ref": "DDBWebsitePartsFromWebiny"
                        }
                    }
                },
                "FunctionName": {
                    "Fn::Join": [
                        "_",
                        [
                            {
                                "Ref": "Environment"
                            },
                            "HOK_transfer_published_item"
                        ]
                    ]
                },
                "Description": "Receives a DDB stream and copies the changed item into the destination ddb table (with some reformating magic), if the item has state published.",
                "MemorySize": 2048,
                "Role": {
                    "Fn::Join": [
                        "",
                        [
                            "arn:aws:iam::",
                            {
                                "Ref": "AWS::AccountId"
                            },
                            ":role/",
                            {
                                "Ref": "Environment"
                            },
                            "_lambda_dynamoDB_S3"
                        ]
                    ]
                },
                "Runtime": "nodejs16.x",
                "Tags": [
                    {
                        "Key": "env",
                        "Value": {
                            "Ref": "Environment"
                        }
                    },
                    {
                        "Key": "app",
                        "Value": {
                            "Ref": "WebsiteName"
                        }
                    }
                ],
                "Timeout": 120
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "6c93e922-f266-4c2a-8fa5-b57798463e64"
                }
            }
        },
        "DDBWebsiteContentFromWebiny": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "id",
                        "AttributeType": "S"
                    }
                ],
                "BillingMode": "PAY_PER_REQUEST",
                "KeySchema": [
                    {
                        "AttributeName": "id",
                        "KeyType": "HASH"
                    }
                ],
                "TableClass": "STANDARD",
                "TableName": {
                    "Fn::Join": [
                        "_",
                        [
                            {
                                "Ref": "Environment"
                            },
                            "WebsiteContentFromWebiny"
                        ]
                    ]
                },
                "Tags": [
                    {
                        "Key": "env",
                        "Value": {
                            "Ref": "Environment"
                        }
                    },
                    {
                        "Key": "app",
                        "Value": {
                            "Ref": "WebsiteName"
                        }
                    }
                ]
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "6532d864-4d8c-40fe-b44d-bfb7fc50b00d"
                }
            }
        },
        "DDBWebsitePartsFromWebiny": {
            "Type": "AWS::DynamoDB::Table",
            "Properties": {
                "AttributeDefinitions": [
                    {
                        "AttributeName": "content_id",
                        "AttributeType": "S"
                    }
                ],
                "BillingMode": "PAY_PER_REQUEST",
                "KeySchema": [
                    {
                        "AttributeName": "content_id",
                        "KeyType": "HASH"
                    }
                ],
                "TableClass": "STANDARD",
                "TableName": {
                    "Fn::Join": [
                        "_",
                        [
                            {
                                "Ref": "Environment"
                            },
                            "WebsitePartsFromWebiny",
                            {
                                "Ref": "WebsiteName"
                            }
                        ]
                    ]
                },
                "Tags": [
                    {
                        "Key": "env",
                        "Value": {
                            "Ref": "Environment"
                        }
                    },
                    {
                        "Key": "app",
                        "Value": {
                            "Ref": "WebsiteName"
                        }
                    }
                ]
            },
            "Metadata": {
                "AWS::CloudFormation::Designer": {
                    "id": "4c82fab9-082e-4a8e-9ff1-a57bf18f7453"
                }
            }
        }
    }
}